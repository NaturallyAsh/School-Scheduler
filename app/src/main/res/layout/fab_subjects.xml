<?xml version="1.0" encoding="utf-8"?>
<com.github.clans.fab.FloatingActionMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab_all"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="65dp"
    android:layout_marginRight="10dp"
    app:menu_colorNormal="@color/colorPrimary"
    app:menu_colorPressed="@color/aqua"
    app:menu_openDirection="up"
    app:menu_showShadow="true"
    app:menu_labels_position="left"
    app:menu_labels_ellipsize="end"
    app:menu_fab_show_animation="@anim/fab_scale_up"
    app:menu_fab_hide_animation="@anim/fab_scale_down"
    app:menu_labels_singleLine="true">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_sub"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:fab_colorNormal="@color/teal"
        app:fab_colorPressed="@color/teal"
        app:fab_label="Add Subject"
        app:fab_size="mini"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_colorNormal="@color/LightSeaGreen"
        app:fab_label="Add Recording"
        app:fab_size="mini"/>

</com.github.clans.fab.FloatingActionMenu>