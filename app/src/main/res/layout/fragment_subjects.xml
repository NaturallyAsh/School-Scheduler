<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:id="@+id/main_root">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_centerInParent="true">

    <TextView
        android:id="@+id/empty_subject_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/no_subjects"/>

   </RelativeLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_all"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        app:menu_colorNormal="@color/colorPrimary"
        app:menu_colorPressed="@color/aqua"
        app:menu_openDirection="up"
        app:menu_showShadow="true"
        app:menu_labels_position="left"
        app:menu_labels_ellipsize="end"
        app:menu_fab_show_animation="@anim/fab_scale_up"
        app:menu_fab_hide_animation="@anim/fab_scale_down"
        app:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_sub"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:fab_colorNormal="@color/teal"
            app:fab_colorPressed="@color/teal"
            app:fab_label="Add Subject"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/LightSeaGreen"
            app:fab_label="Add Recording"
            app:fab_size="mini"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>